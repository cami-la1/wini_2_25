struct Nodopc {
	int dato;
	Nodopc* sig;
};

class ptr_cola {
	private:
	Nodopc* ini;
	Nodopc* fin;
	int cant;

	public:
	ptr_cola();
	bool vacio();
	int recupera(Nodopc* d);
	Nodopc* primero();
	Nodopc* ultimo();
	void Meter(int e);
	void Sacar(int &e);
	int frente();
	int final();
};
#endif
